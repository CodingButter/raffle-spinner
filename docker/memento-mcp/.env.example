# Memento MCP Configuration for DrawDay Team
# Copy this file to .env and update with your actual values

# Neo4j Database Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=DrawDay_Memory_2025!
NEO4J_DATABASE=neo4j

# OpenAI Configuration (for embeddings)
# Using the existing OpenAI key from project root .env
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Memory Storage Configuration
MEMORY_STORAGE_TYPE=neo4j
MEMORY_VECTOR_DIMENSIONS=1536

# Advanced Configuration (optional)
MEMORY_CONFIDENCE_DECAY=0.95
MEMORY_MAX_CONNECTIONS=50
MEMORY_CONNECTION_TIMEOUT=30000

# Debug Mode (set to true for verbose logging)
DEBUG_MODE=false

# Team Configuration
TEAM_NAME=DrawDay Development Team
TEAM_ID=drawday-dev-team

# Agent Namespaces (for multi-agent memory partitioning)
AGENT_NAMESPACES=performance,frontend,stripe,chrome-extension,backend,ui-ux