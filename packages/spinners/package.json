{
  "name": "@raffle-spinner/spinners",
  "version": "1.0.0",
  "description": "Shared spinner components for Raffle Spinner applications",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@raffle-spinner/storage": "workspace:*",
    "@raffle-spinner/spinner-physics": "workspace:*",
    "@raffle-spinner/utils": "workspace:*",
    "@raffle-spinner/hooks": "workspace:*"
  },
  "devDependencies": {
    "@raffle-spinner/typescript-config": "workspace:*",
    "@types/react": "^18.3.16",
    "react": "^18.3.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  }
}
