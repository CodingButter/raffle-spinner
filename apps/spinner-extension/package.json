{
  "name": "@drawday/spinner-extension",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:standalone": "vite --config vite.config.dev.ts",
    "build": "node scripts/build-extension.cjs",
    "build:production": "NODE_ENV=production node scripts/build-extension.cjs",
    "build:only": "tsc --noEmit && vite build",
    "preview": "vite preview",
    "clean": "rm -rf DrawDaySpinner",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\"",
    "icons": "node scripts/resize-icons.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "size": "size-limit",
    "size:why": "size-limit --why"
  },
  "dependencies": {
    "@drawday/auth": "workspace:*",
    "@drawday/hooks": "workspace:*",
    "@drawday/tailwind-config": "workspace:*",
    "@drawday/ui": "workspace:*",
    "@drawday/utils": "workspace:*",
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-select": "^2.1.1",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@raffle-spinner/contexts": "workspace:*",
    "@raffle-spinner/csv-parser": "workspace:*",
    "@raffle-spinner/spinner-physics": "workspace:*",
    "@raffle-spinner/spinners": "workspace:*",
    "@raffle-spinner/storage": "workspace:*",
    "@raffle-spinner/subscription": "workspace:*",
    "canvas-confetti": "^1.9.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.436.0",
    "playwright": "^1.54.2",
    "react": "^18.3.1",
    "react-colorful": "^5.6.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.5.2"
  },
  "size-limit": [
    {
      "name": "Total Extension Bundle",
      "path": "dist/**/*.js",
      "limit": "1.8 MB",
      "webpack": false,
      "gzip": true
    },
    {
      "name": "SlotMachine Component",
      "path": "dist/assets/sidepanel-*.js",
      "limit": "500 KB",
      "webpack": false,
      "gzip": true
    }
  ],
  "devDependencies": {
    "@drawday/eslint-config": "workspace:*",
    "@drawday/prettier-config": "workspace:*",
    "@drawday/typescript-config": "workspace:*",
    "@playwright/test": "^1.54.2",
    "@size-limit/file": "^8.2.6",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^9.1.2",
    "@storybook/blocks": "^8.6.14",
    "@storybook/react": "^9.1.2",
    "@storybook/react-vite": "^9.1.2",
    "@storybook/test": "^8.6.14",
    "@tailwindcss/vite": "^4.0.0-alpha.30",
    "@testing-library/react": "^14.0.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/canvas-confetti": "^1.6.4",
    "@types/chrome": "^0.0.270",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/ui": "^1.0.0",
    "archiver": "^7.0.1",
    "autoprefixer": "^10.4.20",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jsdom": "^23.0.0",
    "node-zip-dir": "^1.0.2",
    "sharp": "^0.34.3",
    "size-limit": "^8.2.6",
    "storybook": "^9.1.2",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.5.4",
    "vite": "^5.4.0",
    "vitest": "^1.0.0"
  },
  "prettier": "@drawday/prettier-config"
}
