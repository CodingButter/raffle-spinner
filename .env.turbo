# Turbo Build Optimization Environment Variables

# Enable experimental features for better performance
TURBO_EXPERIMENTAL_UI=true
TURBO_TELEMETRY_DISABLED=1

# Cache configuration
TURBO_CACHE_DIR=.turbo
TURBO_FORCE=false

# Concurrency settings (auto-detect CPU cores)
TURBO_CONCURRENCY=10

# Remote caching (disabled by default, enable for team collaboration)
# TURBO_TOKEN=your_token_here
# TURBO_TEAM=team_drawday

# Build daemon settings
TURBO_DAEMON=true
TURBO_DAEMON_IDLE_TIMEOUT=3600

# Logging
TURBO_LOG_LEVEL=info
TURBO_LOG_PREFIX=auto

# Performance monitoring
TURBO_PROFILE=false
TURBO_HEAP_SNAPSHOT=false