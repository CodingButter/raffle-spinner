{
  "name": "drawday",
  "version": "1.0.0",
  "private": true,
  "description": "DrawDay - Professional Solutions for UK Raffle Companies",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "build:website": "turbo run build:website --concurrency=10",
    "build:extension": "turbo run build:extension --concurrency=10",
    "build:cache": "turbo run build --cache-dir=.turbo",
    "build:parallel": "turbo run build --parallel --concurrency=100%",
    "build:daemon": "turbo daemon start && turbo run build",
    "build:graph": "turbo run build --graph",
    "build:dry": "turbo run build --dry-run",
    "build:no-cache": "turbo run build --force",
    "clean": "turbo run clean && rm -rf .turbo node_modules/.cache",
    "clean:cache": "turbo daemon clean && rm -rf .turbo",
    "lint": "turbo run lint --concurrency=10",
    "lint:fix": "turbo run lint:fix",
    "format": "turbo run format",
    "format:check": "turbo run format:check --concurrency=10",
    "typecheck": "turbo run typecheck --concurrency=10",
    "quality": "turbo run quality --concurrency=10",
    "quality:fix": "turbo run quality:fix",
    "test": "turbo run test",
    "prepush": "turbo run quality --concurrency=10 && turbo run build --concurrency=10",
    "prepare": "husky",
    "turbo:prune": "turbo prune",
    "turbo:daemon": "turbo daemon status",
    "turbo:summary": "turbo run build --summarize"
  },
  "devDependencies": {
    "@drawday/eslint-config": "workspace:*",
    "@drawday/prettier-config": "workspace:*",
    "eslint": "^8.57.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.3.3",
    "turbo": "^2.5.6",
    "typescript": "^5.5.4"
  },
  "packageManager": "pnpm@9.15.9+sha512.68046141893c66fad01c079231128e9afb89ef87e2691d69e4d40eee228988295fd4682181bae55b58418c3a253bde65a505ec7c5f9403ece5cc3cd37dcf2531",
  "engines": {
    "node": ">=20.0.0"
  }
}
